<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HomeTaskManager.Pages.RateEmotionsPage"
             Title="Rate Emotions"
             x:Name="RateEmotionsPageView">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Back" Clicked="OnBackClicked" Priority="0" Order="Primary" />
    </ContentPage.ToolbarItems>

    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="32">
            <VerticalStackLayout Spacing="12">
                <Label Text="Rate Your Emotions!" Style="{StaticResource SubHeadline}" />
                <Label Text="Pick the emoji that best describes your current emotional state." FontSize="16" TextColor="{StaticResource Gray600}" HorizontalTextAlignment="Center" />
            </VerticalStackLayout>

            <HorizontalStackLayout Spacing="16" HorizontalOptions="Center" BindableLayout.ItemsSource="{Binding EmotionOptions}">
                <BindableLayout.ItemTemplate>
                    <DataTemplate>
                        <Frame WidthRequest="80" HeightRequest="80" CornerRadius="28" BackgroundColor="{StaticResource Gray100}" HasShadow="False" Padding="12">
                            <Frame.Triggers>
                                <DataTrigger TargetType="Frame" Binding="{Binding IsSelected}" Value="True">
                                    <Setter Property="BackgroundColor" Value="#FFE158" />
                                </DataTrigger>
                            </Frame.Triggers>
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding Source={x:Reference RateEmotionsPageView}, Path=SelectEmotionCommand}" CommandParameter="{Binding .}" />
                            </Frame.GestureRecognizers>
                            <Image Source="{Binding Icon}" Aspect="AspectFit" SemanticProperties.Description="{Binding Name}" />
                        </Frame>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </HorizontalStackLayout>

            <Frame BackgroundColor="{StaticResource Secondary}" CornerRadius="20" HasShadow="False" Padding="20">
                <VerticalStackLayout Spacing="12" HorizontalOptions="Center">
                    <Image Source="{Binding SelectedEmotion.Icon}" HeightRequest="56" WidthRequest="56" IsVisible="{Binding HasSelection}" />
                    <Label Text="{Binding SelectedEmotion.Name, TargetNullValue='Nothing selected yet'}" FontAttributes="Bold" HorizontalTextAlignment="Center" />
                    <Label Text="{Binding SelectedEmotion.Description, TargetNullValue='Tap an emoji above to log how you feel today.'}" FontSize="16" TextColor="{StaticResource Gray600}" HorizontalTextAlignment="Center" />
                </VerticalStackLayout>
            </Frame>

            <Button Text="Confirm" Command="{Binding ConfirmSelectionCommand}" IsEnabled="{Binding HasSelection}" Padding="16" FontAttributes="Bold" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
