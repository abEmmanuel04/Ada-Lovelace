<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HomeTaskManager.MainPage"
             Title="Prototype Screens">
    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="24">
            <Label Text="Sprint 1: Screen Prototypes" FontAttributes="Bold" FontSize="28" />
            <Label Text="Use the buttons below to preview the in-progress mobile screens." FontSize="16" TextColor="{StaticResource Gray600}" />

            <Button Text="Rate Emotions" Clicked="OnNavigateToRateEmotions" />
            <Button Text="Group Goals" Clicked="OnNavigateToGroupGoals" />
            <Button Text="Add Group" Clicked="OnNavigateToAddGroup" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
